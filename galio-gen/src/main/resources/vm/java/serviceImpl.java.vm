@RequiredArgsConstructor
@Service
public class ${ClassName}ServiceImpl implements ${ClassName}Service {

    private final ${ClassName}Repository ${className}Repository;

    /**
     * 查询${functionName}
     */
    @Override
    public ${ClassName} queryById(${pkColumn.javaType} ${pkColumn.javaField}) {
        return ${className}Repository.selectById(${pkColumn.javaField});
    }

    #if($table.crud || $table.sub)
        /**
         * 查询${functionName}列表
         */
        @Override
        public Page<${ClassName}> queryPageList(PageDto pageDto) {
            return ${className}Repository.selectPage(pageDto.build());
        }
    #end

    /**
     * 查询${functionName}列表
     */
    @Override
    public List<${ClassName}> queryList(${ClassName}Dto dto) {
        ${ClassName} entity = ObjectUtil.copyObject(dto, ${ClassName}.class);
        Map<String, Object> params = dto.getParams();
        return ${className}Repository.selectList(entity,params);
    }

    /**
     * 新增${functionName}
     */
    @Override
    public Boolean insertByDto(${ClassName}Dto dto) {
        ${ClassName} add = ObjectUtil.copyObject(dto, ${ClassName}.class);
        validEntityBeforeSave(add);
        boolean flag = ${className}Repository.insert(add) > 0;
        #set($pk=$pkColumn.javaField.substring(0,1).toUpperCase() + ${pkColumn.javaField.substring(1)})
        if (flag) {
            dto.set$pk(add.get$pk());
        }
        return flag;
    }

    /**
     * 修改${functionName}
     */
    @Override
    public Boolean updateByDto(${ClassName}Dto dto) {
        ${ClassName} update = ObjectUtil.copyObject(dto, ${ClassName}.class);
        validEntityBeforeSave(update);
        return ${className}Repository.updateById(update) > 0;
    }

    /**
     * 保存前的数据校验
